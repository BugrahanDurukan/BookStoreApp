@model IEnumerable<Magazine>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <img class="img image" src="~/images/magazine.jpg" />
    <h1 class="display-4">Welcome to a Magazine Library</h1>
</div>


<td><a class="btn-primary btn" asp-controller="Magazine" asp-action="Create">Create</a></td>

<table class="table table-striped table-hover">
    @foreach (Magazine m in Model)
    {
        <tr>
            <td>@m.Price</td>
            <td>@m.Name</td>
            <td><a calss="btn-primary" asp-controller="Magazine" asp-action="Detail" asp-route-id="@m.MagazineId">Detail</a></td>
            <td><a calss="btn-primary" asp-controller="Magazine" asp-action="Edit" asp-route-id="@m.MagazineId">Edit</a></td>
            <td><a calss="btn-primary" asp-controller="Magazine" asp-action="Delete" asp-route-id="@m.MagazineId">Delete</a></td>
        </tr>
    }
</table>

<h1>Partial View</h1>
<!--Partial view implemented in the name of "MagazineSummary" data is provided here to be used in MagazineSummary-->
@foreach (Magazine p in Model)
{
    <partial name="MagazineSummary" model="p" />
}

